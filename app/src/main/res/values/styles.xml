<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="film_title">
        <item name="android:textColor">#ECECEC</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="age_limit">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="views_count">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#6D6D80</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="storyline">
        <item name="android:textColor">#ECECEC</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="storyline_description">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="cast_header">
        <item name="android:textColor">#ECECEC</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="actor_image">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="actor_name">
        <item name="android:textColor">#D8D8D8</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>